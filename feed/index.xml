---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
   <title>{{ site.name | xml_escape }}</title>
   {% if site.description %}<subtitle>{{ site.description | xml_escape }}</subtitle>{% endif %}
   <link rel="alternate" type="text/html" href="{{ site.url }}" />
   <link rel="self" type="application/atom+xml" href="http://jonbee.be/feed" />
   <link href="{{ site.url }}" />
   <id>http://jonbee.be/feed</id>
   <updated>{{ site.time | date_to_rfc822  }}</updated>
   <author>
      <name>Jonathan Beebe</name>
      <uri>http://jonbee.be</uri>
   </author>
   <rights>Copyright Â© 2014, Jonathan Beebe</rights>
   {% for post in site.posts limit:30 %}
      <entry>
         <title>{{ post.title | xml_escape }}</title>
         <id>{{ site.url }}{{ post.url }}</id>
         <content type="html" xml:base="http://jonbee.be">{{ post.content | xml_escape }}</content>
         <published>{{ post.date | date_to_rfc822  }}</published>
         {% if post.updated %}
            <updated>{{ post.updated | date_to_rfc822  }}</updated>
         {% else %}
            <updated>{{ post.date | date_to_rfc822  }}</updated>
         {% endif %}
         {% if post.external_url %}
            <link rel="alternate" type="text/html" href="{{ post.external_url | escape }}" />
            <link rel="related" type="text/html" href="{{ site.url }}{{ post.url }}" />
         {% else %}
            <link rel="alternate" type="text/html" href="{{ site.url }}{{ post.url }}" />
         {% endif %}
         <author>
            <name>Jonathan Beebe</name>
            <uri>http://jonbee.be</uri>
         </author>
      </entry>
   {% endfor %}
</feed>